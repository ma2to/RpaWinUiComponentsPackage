<!-- AdvancedWinUiDataGrid/AdvancedWinUiDataGrid.csproj - ✅ OPRAVENÝ bez duplikátov XAML -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- ✅ OPRAVENÉ: Potlačenie CA1416 warnings pre Windows-only balík -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416</NoWarn>

    <!-- ✅ KĽÚČOVÁ OPRAVA: POVOLIŤ automatické XAML ale BEZ explicitného pridávania -->
    <EnableDefaultPageItems>true</EnableDefaultPageItems>
    <EnableDefaultXamlItems>true</EnableDefaultXamlItems>

    <!-- Package Information -->
    <PackageId>RpaWinUiComponents.AdvancedWinUiDataGrid</PackageId>
    <Version>1.0.1</Version>
    <Authors>RPA Team</Authors>
    <Company>RPA Company</Company>
    <Product>RPA WinUI Components</Product>
    <Description>Profesionálny WinUI3 DataGrid komponent s pokročilými funkciami pre dátové aplikácie</Description>
    <PackageTags>WinUI3;DataGrid;Components;Table;Validation;Excel</PackageTags>
    <PackageProjectUrl>https://github.com/company/rpa-winui-components</PackageProjectUrl>
    <RepositoryUrl>https://github.com/company/rpa-winui-components</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © 2025 RPA Company</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

    <!-- Assembly Information -->
    <AssemblyTitle>Advanced WinUI DataGrid Component</AssemblyTitle>
    <AssemblyDescription>Pokročilý DataGrid komponent pre WinUI3 aplikácie s realtime validáciami a Excel funkcionalitou</AssemblyDescription>
  </PropertyGroup>

  <!-- WinUI Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
  </ItemGroup>

  <!-- Dependency Injection & Logging -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.7" />
  </ItemGroup>

  <!-- Additional System Dependencies -->
  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <!-- ✅ ODSTRÁNENÉ: Explicitné XAML súbory (aby sa zabránilo duplikátom) -->
  <!-- EnableDefaultPageItems>true automaticky zahŕňa všetky *.xaml súbory -->

  <!-- ✅ MSBuild targets pre správne zabalenie do NuGet -->
  <ItemGroup>
    <None Include="build/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="build/" />
    <None Include="buildTransitive/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

  <!-- ✅ NOVÉ: Explicitné zabalenie XAML súborov do NuGet balíka -->
  <ItemGroup>
    <!-- Zahrnúť všetky XAML súbory do balíka (ale nie duplikovane do build procesu) -->
    <None Include="Controls/**/*.xaml" Pack="true" PackagePath="lib/$(TargetFramework)/Controls/" />
    <None Include="Themes/*.xaml" Pack="true" PackagePath="lib/$(TargetFramework)/Themes/" />

    <!-- Zahrnúť aj compiled assemblies -->
    <None Include="$(OutputPath)/$(AssemblyName).dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="'$(Configuration)' == 'Release'" />
    <None Include="$(OutputPath)/$(AssemblyName).pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="'$(Configuration)' == 'Release'" />
  </ItemGroup>

  <!-- Public API Surface -->
  <ItemGroup>
    <InternalsVisibleTo Include="RpaWinUiComponents.AdvancedWinUiDataGrid.Tests" />
  </ItemGroup>

  <!-- Ensure proper WinUI packaging -->
  <PropertyGroup Condition="'$(DisableMsixProjectCapabilityAddition)' == ''">
    <DisableMsixProjectCapabilityAddition>true</DisableMsixProjectCapabilityAddition>
  </PropertyGroup>

  <!-- ✅ Build optimizations -->
  <PropertyGroup>
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <WarningsAsErrors />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>

  <!-- ✅ NOVÉ: Custom target pre packaging XAML súborov -->
  <Target Name="PackageXamlFiles" BeforeTargets="GenerateNuspec" Condition="'$(Configuration)' == 'Release'">
    <Message Text="🔧 Packaging XAML files for NuGet..." Importance="high" />

    <!-- Ensure XAML files are properly included in the package -->
    <ItemGroup>
      <PackageXamlFiles Include="**/*.xaml" Exclude="bin/**;obj/**" />
    </ItemGroup>

    <Message Text="🔧 Found @(PackageXamlFiles->Count()) XAML files to package" Importance="normal" />
  </Target>

</Project>