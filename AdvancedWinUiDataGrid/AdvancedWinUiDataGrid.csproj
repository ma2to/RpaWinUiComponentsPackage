<!-- AdvancedWinUiDataGrid/AdvancedWinUiDataGrid.csproj - ✅ NETSDK1152 FIX + Individual Color Config -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- ✅ OPRAVENÉ: Unified target framework - iba jeden formát -->
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>false</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- ✅ KĽÚČOVÁ OPRAVA: XBF generation + Packaging fix -->
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <BuildOutputTargetFolder>lib</BuildOutputTargetFolder>
    <ContentTargetFolders>content</ContentTargetFolders>

    <!-- ✅ XAML compilation -->
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <EnableDefaultXamlItems>false</EnableDefaultXamlItems>
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>
    <GenerateXbfFilesForPackaging>true</GenerateXbfFilesForPackaging>

    <!-- ✅ Windows platform support -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416</NoWarn>

    <!-- ✅ Package generation -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- ✅ Package Information - UPDATED -->
    <PackageId>RpaWinUiComponents.AdvancedWinUiDataGrid</PackageId>
    <Version>1.0.13</Version>
    <Authors>RPA Team</Authors>
    <Company>RPA Company</Company>
    <Product>RPA WinUI Components</Product>
    <Description>Profesionálny WinUI3 DataGrid komponent s AUTO-ADD funkciou, individual color config a NETSDK1152 fix</Description>
    <PackageTags>WinUI3;DataGrid;Components;Table;Validation;Excel;Auto-Add;ColorConfig;RealTime;XAML</PackageTags>
    <PackageProjectUrl>https://github.com/company/rpa-winui-components</PackageProjectUrl>
    <RepositoryUrl>https://github.com/company/rpa-winui-components</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © 2025 RPA Company</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>v1.0.13: NETSDK1152 fix + Individual Color Config + AUTO-ADD unified</PackageReleaseNotes>

    <!-- ✅ Assembly Information -->
    <AssemblyTitle>Advanced WinUI DataGrid Component with Individual Color Config</AssemblyTitle>
    <AssemblyDescription>Pokročilý DataGrid komponent pre WinUI3 s AUTO-ADD a individual color config</AssemblyDescription>

    <!-- ✅ KĽÚČOVÁ OPRAVA: Potlač packaging warnings + duplicate warnings -->
    <NoWarn>$(NoWarn);NU5128;NU5131;NETSDK1022;NU5048;MSB3270;MSB3271;MSB3277</NoWarn>
  </PropertyGroup>

  <!-- ✅ EXPLICITNÉ XAML súbory -->
  <ItemGroup>
    <Page Include="Controls\AdvancedDataGrid.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Controls\DataGridCell.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Controls\SpecialColumns\DeleteRowColumn.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Controls\SpecialColumns\ValidationAlertsColumn.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!-- ✅ WinUI Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
  </ItemGroup>

  <!-- ✅ Dependency Injection & Logging -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.7" />
  </ItemGroup>

  <!-- ✅ Additional System Dependencies -->
  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <!-- ✅ MSBuild targets -->
  <ItemGroup>
    <None Include="build/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="build/" />
    <None Include="buildTransitive/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

  <!-- ✅ KĽÚČOVÁ OPRAVA: Packaging - iba jeden TFM adresár -->
  <ItemGroup>
    <!-- ✅ Main assembly - FORCE single target framework -->
    <None Include="$(OutputPath)$(AssemblyName).dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).dll')" />
    <None Include="$(OutputPath)$(AssemblyName).pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).pdb')" />
    
    <!-- ✅ XBF súbory - iba z jednej cesty -->
    <None Include="$(OutputPath)*.xbf" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)')" />
    <None Include="$(OutputPath)**/*.xbf" Pack="true" PackagePath="lib/$(TargetFramework)/" />
    
    <!-- ✅ XamlTypeInfo -->
    <None Include="$(OutputPath)$(AssemblyName).xr.xml" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).xr.xml')" />
  </ItemGroup>

  <!-- ✅ XAML súbory ako content fallback -->
  <ItemGroup>
    <None Include="Controls\**\*.xaml" Pack="true" PackagePath="content/Controls/" />
    <None Include="Themes\*.xaml" Pack="true" PackagePath="content/Themes/" />
  </ItemGroup>

  <!-- ✅ Force single TFM generation -->
  <Target Name="PreventMultipleTfmGeneration" BeforeTargets="Pack">
    <Message Text="🎯 Generating package for SINGLE TFM: $(TargetFramework)" Importance="normal" />
    
    <!-- ✅ Zabezpeč že sa generuje iba jeden TFM adresár -->
    <PropertyGroup>
      <_SingleTfmMode>true</_SingleTfmMode>
    </PropertyGroup>
  </Target>

  <!-- ✅ Post-build info -->
  <Target Name="LogPackageInfo" AfterTargets="Pack" Condition="'$(Configuration)' == 'Debug'">
    <Message Text="📦 Package created: $(PackageId) v$(Version)" Importance="high" />
    <Message Text="📦 ✅ NETSDK1152 FIXED - single TFM: $(TargetFramework)" Importance="high" />
    <Message Text="📦 ✨ Individual Color Config implementovaná" Importance="high" />
    <Message Text="📦 🔒 Clean PUBLIC API (AdvancedDataGrid, ColumnDefinition, ValidationRule, ThrottlingConfig, DataGridColorConfig)" Importance="high" />
  </Target>

</Project>