<!-- AdvancedWinUiDataGrid/AdvancedWinUiDataGrid.csproj - ✅ KOMPLETNE OPRAVENÝ XBF packaging -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>false</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- ✅ KĽÚČOVÁ OPRAVA: XBF generation pre Package Reference -->
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <BuildOutputTargetFolder>lib</BuildOutputTargetFolder>
    <ContentTargetFolders>content</ContentTargetFolders>

    <!-- ✅ OPRAVENÉ: XBF generation aj pre DEBUG mode -->
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
    <EnableDefaultXamlItems>false</EnableDefaultXamlItems>
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>
    <GenerateXbfFilesForPackaging>true</GenerateXbfFilesForPackaging>

    <!-- ✅ Windows platform support -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416</NoWarn>

    <!-- ✅ Package generation -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- ✅ Package Information -->
    <PackageId>RpaWinUiComponents.AdvancedWinUiDataGrid</PackageId>
    <Version>1.0.12</Version>
    <Authors>RPA Team</Authors>
    <Company>RPA Company</Company>
    <Product>RPA WinUI Components</Product>
    <Description>Profesionálny WinUI3 DataGrid komponent s AUTO-ADD funkcionalitou a OPRAVENÝM XAML loading</Description>
    <PackageTags>WinUI3;DataGrid;Components;Table;Validation;Excel;Auto-Add;ColorThemes;RealTime;XAML</PackageTags>
    <PackageProjectUrl>https://github.com/company/rpa-winui-components</PackageProjectUrl>
    <RepositoryUrl>https://github.com/company/rpa-winui-components</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © 2025 RPA Company</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>v1.0.12: OPRAVENÉ XAML loading pre Package Reference + AUTO-ADD funkcionalita + XBF súbory fix</PackageReleaseNotes>

    <!-- ✅ Assembly Information -->
    <AssemblyTitle>Advanced WinUI DataGrid Component with FIXED XAML loading</AssemblyTitle>
    <AssemblyDescription>Pokročilý DataGrid komponent pre WinUI3 s opraveným XAML loading pre Package Reference</AssemblyDescription>

    <!-- ✅ Potlač packaging warnings -->
    <NoWarn>$(NoWarn);NU5128;NU5131;NETSDK1022;NU5048;MSB3270;MSB3271</NoWarn>
  </PropertyGroup>

  <!-- ✅ KĽÚČOVÉ: EXPLICITNÉ XAML súbory s forced compilation PRE OBA MODES -->
  <ItemGroup>
    <Page Include="Controls\AdvancedDataGrid.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Controls\DataGridCell.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Controls\SpecialColumns\DeleteRowColumn.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Controls\SpecialColumns\ValidationAlertsColumn.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!-- ✅ WinUI Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
  </ItemGroup>

  <!-- ✅ Dependency Injection & Logging -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.7" />
  </ItemGroup>

  <!-- ✅ Additional System Dependencies -->
  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <!-- ✅ MSBuild targets pre NuGet zabalenie -->
  <ItemGroup>
    <None Include="build/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="build/" />
    <None Include="buildTransitive/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

  <!-- ✅ KĽÚČOVÁ OPRAVA: XBF súbory packaging PRE OBA MODES (Debug aj Release) -->
  <ItemGroup>
    <!-- ✅ Zabaľ všetky XBF súbory z output directory -->
    <None Include="$(OutputPath)**/*.xbf" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)')" />
    
    <!-- ✅ Zabaľ main assembly -->
    <None Include="$(OutputPath)$(AssemblyName).dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).dll')" />
    <None Include="$(OutputPath)$(AssemblyName).pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).pdb')" />
    
    <!-- ✅ Zabaľ XamlTypeInfo ak existuje -->
    <None Include="$(OutputPath)$(AssemblyName).xr.xml" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).xr.xml')" />
    
    <!-- ✅ Zabaľ WinMD súbory ak existujú -->
    <None Include="$(OutputPath)**/*.winmd" Pack="true" PackagePath="lib/$(TargetFramework)/" />
  </ItemGroup>

  <!-- ✅ NOVÉ: Zabaľ XAML súbory ako content pre fallback -->
  <ItemGroup>
    <None Include="Controls\**\*.xaml" Pack="true" PackagePath="content/Controls/" />
    <None Include="Themes\*.xaml" Pack="true" PackagePath="content/Themes/" />
  </ItemGroup>

  <!-- ✅ OPRAVENÉ: Forced XBF generation pre OBA MODES -->
  <Target Name="GenerateXbfFiles" BeforeTargets="Pack;Build">
    <Message Text="🎨 Generating XBF files for Package Reference ($(Configuration) mode)..." Importance="normal" />
    
    <!-- ✅ Force XAML compilation -->
    <ItemGroup>
      <XamlToCompile Include="@(Page)" />
    </ItemGroup>
    
    <Message Text="🎨 XAML files to compile: @(XamlToCompile->Count())" Importance="normal" />
  </Target>

  <!-- ✅ NOVÉ: Post-build XBF verification -->
  <Target Name="VerifyXbfGeneration" AfterTargets="Build">
    <Message Text="🔍 Verifying XBF generation ($(Configuration) mode)..." Importance="normal" />
    
    <ItemGroup>
      <GeneratedXbfFiles Include="$(OutputPath)**/*.xbf" />
    </ItemGroup>
    
    <Message Text="✅ Generated XBF files: @(GeneratedXbfFiles->Count())" Importance="normal" Condition="'@(GeneratedXbfFiles)' != ''" />
    <Warning Text="⚠️ No XBF files generated - XAML compilation may have failed" Condition="'@(GeneratedXbfFiles)' == ''" />
    
    <!-- ✅ Log XBF file paths -->
    <Message Text="📁 XBF: %(GeneratedXbfFiles.Identity)" Importance="low" Condition="'@(GeneratedXbfFiles)' != ''" />
  </Target>

  <!-- ✅ WinUI3 specific build settings PRE OBA MODES -->
  <PropertyGroup>
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>
    <Optimize Condition="'$(Configuration)' == 'Release'">true</Optimize>
    <GenerateDocumentationFile Condition="'$(Configuration)' == 'Release'">true</GenerateDocumentationFile>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <!-- ✅ Public API Surface - len TIETO triedy sú PUBLIC -->
  <ItemGroup>
    <InternalsVisibleTo Include="RpaWinUiComponents.AdvancedWinUiDataGrid.Tests" />
  </ItemGroup>

  <!-- ✅ Build optimizations -->
  <PropertyGroup>
    <WarningsAsErrors />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>5</WarningLevel>

    <!-- ✅ Disable MSIX for class library -->
    <DisableMsixProjectCapabilityAddition>true</DisableMsixProjectCapabilityAddition>
  </PropertyGroup>

  <!-- ✅ NOVÝ: Pre-build validation -->
  <Target Name="ValidateXamlFiles" BeforeTargets="PrepareForBuild">
    <Message Text="🔍 Validating XAML files for XBF generation..." Importance="normal" />
    
    <Error Text="❌ AdvancedDataGrid.xaml not found!" Condition="!Exists('Controls/AdvancedDataGrid.xaml')" />
    <Error Text="❌ Generic.xaml not found!" Condition="!Exists('Themes/Generic.xaml')" />
    
    <Message Text="✅ All XAML files found for XBF generation" Importance="normal" />
  </Target>

  <!-- ✅ Custom targets pre post-build -->
  <Target Name="LogPackageInfo" AfterTargets="Pack" Condition="'$(Configuration)' == 'Debug'">
    <Message Text="📦 Package created: $(PackageId) v$(Version)" Importance="high" />
    <Message Text="📦 ✨ OPRAVENÉ XAML loading pre Package Reference ($(Configuration) mode)" Importance="high" />
    <Message Text="📦 ✅ AUTO-ADD riadkov funkcionalita implementovaná" Importance="high" />
    <Message Text="📦 🔒 Clean PUBLIC API (AdvancedDataGrid, ColumnDefinition, ValidationRule, ThrottlingConfig, DataGridColorTheme)" Importance="high" />
    <Message Text="📦 Target framework: $(TargetFramework)" Importance="high" />
  </Target>

  <!-- ✅ Ensure clean package structure -->
  <Target Name="CleanupBeforePack" BeforeTargets="Pack">
    <Message Text="🧹 Cleaning up before package creation (XBF packaging fix)..." Importance="normal" />
  </Target>

  <!-- ✅ NOVÉ: Force XBF compilation aj pre Debug builds -->
  <Target Name="ForceXamlCompilation" BeforeTargets="XamlPreCompile">
    <Message Text="🎨 Forcing XAML compilation for $(Configuration) mode..." Importance="normal" />
    
    <PropertyGroup>
      <!-- ✅ Ensure XAML compilation is always enabled -->
      <XamlCompilationEnabled>true</XamlCompilationEnabled>
      <UseCompiledXaml>true</UseCompiledXaml>
      <XamlRequiredFileExt>.xbf</XamlRequiredFileExt>
    </PropertyGroup>
  </Target>

</Project>