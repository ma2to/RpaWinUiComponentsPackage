<!-- AdvancedWinUiDataGrid/AdvancedWinUiDataGrid.csproj - ✅ OPRAVENÝ pre správne WinUI3 NuGet balenie -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <!-- ✅ Windows platform support -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416</NoWarn>

    <!-- ✅ KĽÚČOVÁ OPRAVA: WinUI3 XAML compilation a balenie -->
    <EnableDefaultPageItems>true</EnableDefaultPageItems>
    <EnableDefaultXamlItems>true</EnableDefaultXamlItems>
    <UseWPF>false</UseWPF>
    <UseWindowsForms>false</UseWindowsForms>

    <!-- Package Information -->
    <PackageId>RpaWinUiComponents.AdvancedWinUiDataGrid</PackageId>
    <Version>1.0.3</Version>
    <Authors>RPA Team</Authors>
    <Company>RPA Company</Company>
    <Product>RPA WinUI Components</Product>
    <Description>Profesionálny WinUI3 DataGrid komponent s pokročilými funkciami pre dátové aplikácie</Description>
    <PackageTags>WinUI3;DataGrid;Components;Table;Validation;Excel</PackageTags>
    <PackageProjectUrl>https://github.com/company/rpa-winui-components</PackageProjectUrl>
    <RepositoryUrl>https://github.com/company/rpa-winui-components</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © 2025 RPA Company</Copyright>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

    <!-- Assembly Information -->
    <AssemblyTitle>Advanced WinUI DataGrid Component</AssemblyTitle>
    <AssemblyDescription>Pokročilý DataGrid komponent pre WinUI3 aplikácie s realtime validáciami a Excel funkcionalitou</AssemblyDescription>
  </PropertyGroup>

  <!-- WinUI Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
  </ItemGroup>

  <!-- Dependency Injection & Logging -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.7" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.7" />
  </ItemGroup>

  <!-- Additional System Dependencies -->
  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <!-- ✅ KĽÚČOVÁ OPRAVA: MSBuild targets pre správne NuGet zabalenie -->
  <ItemGroup>
    <None Include="build/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="build/" />
    <None Include="buildTransitive/RpaWinUiComponents.AdvancedWinUiDataGrid.targets" Pack="true" PackagePath="buildTransitive/" />
  </ItemGroup>

  <!-- ✅ NOVÉ: Explicitné zabalenie XAML súborov pre WinUI3 -->
  <ItemGroup>
    <!-- Zabaľ skompilované XAML súbory -->
    <None Include="$(OutputPath)$(AssemblyName).dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).dll')" />
    <None Include="$(OutputPath)$(AssemblyName).pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)$(AssemblyName).pdb')" />

    <!-- Zabaľ aj XBF súbory (skompilované XAML) ak existujú -->
    <None Include="$(OutputPath)**/*.xbf" Pack="true" PackagePath="lib/$(TargetFramework)/" Condition="Exists('$(OutputPath)')" />
  </ItemGroup>

  <!-- ✅ NOVÉ: WinUI3 špeciálne nastavenia pre balenie -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <!-- Pre Release build zabezpeč optimalizované XAML -->
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>
  </PropertyGroup>

  <!-- Public API Surface -->
  <ItemGroup>
    <InternalsVisibleTo Include="RpaWinUiComponents.AdvancedWinUiDataGrid.Tests" />
  </ItemGroup>

  <!-- Ensure proper WinUI packaging -->
  <PropertyGroup Condition="'$(DisableMsixProjectCapabilityAddition)' == ''">
    <DisableMsixProjectCapabilityAddition>true</DisableMsixProjectCapabilityAddition>
  </PropertyGroup>

  <!-- ✅ Build optimizations -->
  <PropertyGroup>
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <WarningsAsErrors />
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>

  <!-- ✅ NOVÉ: Vývojárske nastavenia pre debugging NuGet balíka -->
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <!-- ✅ NOVÉ: Custom targets pre post-build -->
  <Target Name="LogPackageInfo" AfterTargets="Pack" Condition="'$(Configuration)' == 'Debug'">
    <Message Text="📦 Package created: $(PackageId) v$(Version)" Importance="high" />
    <Message Text="📦 Package output: $(PackageOutputPath)" Importance="high" />
    <Message Text="📦 Target framework: $(TargetFramework)" Importance="high" />
  </Target>

</Project>