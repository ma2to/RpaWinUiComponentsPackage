<!-- RpaWinUiComponents.Demo/MainWindow.xaml - ✅ AKTUALIZOVANÉ s Auto-Add demo UI -->
<Window x:Class="RpaWinUiComponents.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:RpaWinUiComponents.Demo"
        xmlns:grid="using:RpaWinUiComponents.AdvancedWinUiDataGrid"
        Title="RPA WinUI Components - Demo s Auto-Add Riadkov Funkciou">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource AccentFillColorDefaultBrush}" 
                Padding="20,16">
            <StackPanel>
                <TextBlock Text="🚀 RPA WinUI Components - Advanced DataGrid s Auto-Add Funkciou" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                    <TextBlock Text="Status:" 
                              FontSize="14"
                              Foreground="White"/>
                    <TextBlock x:Name="InitStatusText" 
                              Text=" - Inicializuje sa s Auto-Add..."
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="White"/>
                </StackPanel>
                <TextBlock Text="✨ NOVÉ: Auto-Add Riadkov + Color Theme API + Realtime Validácie" 
                          FontSize="12" 
                          FontWeight="Medium"
                          Foreground="White"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Spacing="12">

                    <!-- ✅ NOVÝ: Auto-Add Demo Panel -->
                    <Border Background="{ThemeResource AccentFillColorSecondaryBrush}"
                            BorderBrush="{ThemeResource AccentStrokeColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🔥 Auto-Add Demo (NOVÉ)" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="White"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="TestAutoAddFewRowsButton"
                                    Content="📉 Test: 3 riadky → 5+1"
                                    Click="OnTestAutoAddFewRowsClick"
                                    Width="200"
                                    Background="LightGreen"
                                    Foreground="Black"
                                    ToolTipService.ToolTip="Načíta 3 riadky dát (menej ako minimum 5) → mal by zostať na 6 riadkoch"/>

                            <Button x:Name="TestAutoAddManyRowsButton"
                                    Content="📈 Test: 8 riadkov → 9"
                                    Click="OnTestAutoAddManyRowsClick"
                                    Width="200"
                                    Background="LightBlue"
                                    Foreground="Black"
                                    ToolTipService.ToolTip="Načíta 8 riadkov dát (viac ako minimum 5) → vytvorí 9. prázdny riadok"/>

                            <Button x:Name="TestAutoAddDeleteButton"
                                    Content="🗑️ Test: Smart Delete"
                                    Click="OnTestAutoAddDeleteClick"
                                    Width="200"
                                    Background="Orange"
                                    Foreground="Black"
                                    ToolTipService.ToolTip="Test inteligentného mazania: fyzicky vs čistenie obsahu"/>

                            <Button x:Name="ShowAutoAddStatusButton"
                                    Content="📊 Zobraz Auto-Add Status"
                                    Click="OnShowAutoAddStatusClick"
                                    Width="200"
                                    Background="Gold"
                                    Foreground="Black"/>
                        </StackPanel>
                    </Border>

                    <!-- Základné operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📊 Základné Operácie" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="LoadSampleDataButton"
                                    Content="📥 Načítať Ukážkové Dáta"
                                    Click="OnLoadSampleDataClick"
                                    Width="200"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    Foreground="White"/>

                            <Button x:Name="ValidateAllButton"
                                    Content="✅ Validovať Všetko"
                                    Click="OnValidateAllClick"
                                    Width="200"/>

                            <Button x:Name="ExportDataButton"
                                    Content="📤 Exportovať Dáta"
                                    Click="OnExportDataClick"
                                    Width="200"/>

                            <Button x:Name="ClearDataButton"
                                    Content="🗑️ Vymazať Všetko"
                                    Click="OnClearDataClick"
                                    Width="200"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Color Theme Operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🎨 Color Themes" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="ApplyLightThemeButton"
                                    Content="☀️ Light Theme"
                                    Click="OnApplyLightThemeClick"
                                    Width="180"/>

                            <Button x:Name="ApplyDarkThemeButton"
                                    Content="🌙 Dark Theme"
                                    Click="OnApplyDarkThemeClick"
                                    Width="180"
                                    Background="{ThemeResource SystemFillColorSolidNeutralBrush}"/>

                            <Button x:Name="ApplyBlueThemeButton"
                                    Content="💙 Blue Theme"
                                    Click="OnApplyBlueThemeClick"
                                    Width="180"
                                    Background="{ThemeResource SystemFillColorSolidNeutralBrush}"/>

                            <Button x:Name="ApplyCustomThemeButton"
                                    Content="✨ Custom Theme"
                                    Click="OnApplyCustomThemeClick"
                                    Width="180"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    Foreground="White"/>

                            <Button x:Name="ResetThemeButton"
                                    Content="🔄 Reset to Default"
                                    Click="OnResetThemeClick"
                                    Width="180"/>
                        </StackPanel>
                    </Border>

                    <!-- Custom Validation Operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🎯 Custom Validácia" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="DeleteByCustomValidationButton"
                                    Content="🗑️ Zmaž: Plat>10k, Vek>50"
                                    Click="OnDeleteByCustomValidationClick"
                                    Width="220"
                                    Background="{ThemeResource SystemFillColorAttentionBrush}"
                                    ToolTipService.ToolTip="Zmaže riadky kde plat > 10000 ALEBO vek > 50 (s Auto-Add ochranou)"/>

                            <Button x:Name="AdvancedDeleteExamplesButton"
                                    Content="⚡ Pokročilé Delete Príklady"
                                    Click="OnAdvancedDeleteExamplesClick"
                                    Width="220"
                                    Background="{ThemeResource SystemFillColorCautionBrush}"
                                    ToolTipService.ToolTip="Auto-Add ochrana pri mazaní"/>
                        </StackPanel>
                    </Border>

                    <!-- ✅ AKTUALIZOVANÉ: Info Panel s Auto-Add info -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="6">
                            <TextBlock Text="ℹ️ Auto-Add Návod" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Margin="0,0,0,4"/>

                            <TextBlock FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      Width="220">
                                <Run Text="🔥 AUTO-ADD FUNKCIE:"/>
                                <LineBreak/>
                                <Run Text="• Načítanie 3 dát → 5+1 riadkov"/>
                                <LineBreak/>
                                <Run Text="• Načítanie 8 dát → 8+1 riadkov"/>
                                <LineBreak/>
                                <Run Text="• Vyplň posledný → pridá nový"/>
                                <LineBreak/>
                                <Run Text="• Mazanie: smart ochrana min."/>
                                <LineBreak/>
                                <Run Text="• Vždy 1 prázdny na konci"/>
                            </TextBlock>

                            <TextBlock Text="💡 TIP: Vyplň posledný riadok → automaticky sa pridá nový prázdny!"
                                      FontSize="11"
                                      FontWeight="Medium"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      TextWrapping="Wrap"
                                      Width="220"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">

            <!-- Loading Panel -->
            <Border x:Name="LoadingPanel"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="48" 
                                 Height="48"/>

                    <TextBlock x:Name="LoadingDetailText"
                              Text="Inicializuje sa Advanced DataGrid s Auto-Add riadkov funkciou..."
                              FontSize="16"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>

                    <TextBlock Text="Pripravuje sa Auto-Add: automatické pridávanie a mazanie riadkov..."
                              FontSize="14"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>

                </StackPanel>
            </Border>

            <!-- DataGrid Component -->
            <grid:AdvancedDataGrid x:Name="DataGridControl"
                                  Visibility="Collapsed"
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1"
                                  CornerRadius="8"/>

        </Grid>

        <!-- ✅ AKTUALIZOVANÝ Status Bar s Auto-Add info -->
        <Border Grid.Row="3" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,12">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusTextBlock"
                          Grid.Column="0"
                          Text="Pripravuje sa DataGrid s Auto-Add riadkov funkcionalitou..."
                          FontSize="14"
                          VerticalAlignment="Center"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="16">

                    <TextBlock Text="🔥 Auto-Add Riadkov + 🎨 Color Themes + ⚡ Realtime Validácie"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                              VerticalAlignment="Center"/>

                    <TextBlock Text="v1.0.5"
                              FontSize="12"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>