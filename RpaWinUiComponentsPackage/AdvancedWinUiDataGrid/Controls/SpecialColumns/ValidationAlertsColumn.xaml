<!-- Controls/SpecialColumns/ValidationAlertsColumn.xaml - ✅ OPRAVENÝ -->
<UserControl
    x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.ValidationAlertsColumn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border x:Name="AlertsCellBorder"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            Padding="8,6"
            MinHeight="36">

        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      MaxHeight="100">

            <!-- ✅ OPRAVENÉ: AlertsTextBlock s potrebnými vlastnosťami -->
            <TextBlock x:Name="AlertsTextBlock"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

        </ScrollViewer>

    </Border>
</UserControl>