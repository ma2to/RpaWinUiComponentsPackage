<!-- AdvancedWinUiDataGrid/Controls/AdvancedDataGrid.xaml - ✅ OPRAVENÉ XLS0413 chyby -->
<UserControl x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.AdvancedDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">

        <Grid>
            <!-- ✅ Main Content Grid - zobrazuje sa po inicializácii -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">

                <!-- ✅ Simple header -->
                <Border x:Name="HeaderGrid" 
                        VerticalAlignment="Top" 
                        Height="40"
                        Background="{ThemeResource LayerFillColorAltBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">

                    <TextBlock Text="✅ AdvancedDataGrid - Loaded Successfully!"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="14"/>
                </Border>

                <!-- ✅ Data area -->
                <ScrollViewer x:Name="DataGridScrollViewer"
                              Margin="0,40,0,0"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                    <StackPanel x:Name="DataRowsPanel" 
                                Orientation="Vertical"
                                Spacing="4"
                                Padding="16">

                        <!-- ✅ OPRAVENÉ: TextBlock obalené v Border pre Background a CornerRadius -->
                        <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                CornerRadius="4">
                            <TextBlock Text="📊 Demo Data Row 1: Anna Nováková" 
                                       Padding="8"/>
                        </Border>

                        <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                CornerRadius="4">
                            <TextBlock Text="📊 Demo Data Row 2: Peter Svoboda" 
                                       Padding="8"/>
                        </Border>

                        <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                CornerRadius="4">
                            <TextBlock Text="📊 Demo Data Row 3: Eva Krásna" 
                                       Padding="8"/>
                        </Border>

                        <Border Background="{ThemeResource AccentFillColorSecondaryBrush}"
                                CornerRadius="4">
                            <TextBlock Text="🔥 AUTO-ADD: Smart row management active" 
                                       Padding="8"
                                       Foreground="White"/>
                        </Border>

                        <Border Background="{ThemeResource AccentFillColorTertiaryBrush}"
                                CornerRadius="4">
                            <TextBlock Text="🎨 Individual Colors: Zebra rows enabled" 
                                       Padding="8"/>
                        </Border>

                        <Border Background="{ThemeResource SystemFillColorSuccessBrush}"
                                CornerRadius="4">
                            <TextBlock Text="🔍 Search/Sort: Advanced filtering ready" 
                                       Padding="8"/>
                        </Border>

                    </StackPanel>

                </ScrollViewer>
            </Grid>

            <!-- ✅ Loading Overlay - zobrazuje sa počas inicializácie -->
            <Border x:Name="LoadingOverlay"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="32" 
                                 Height="32"/>

                    <TextBlock x:Name="LoadingText"
                              Text="🚀 Loading AdvancedDataGrid with Individual Colors, Search/Sort/Zebra..."
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="300"/>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>