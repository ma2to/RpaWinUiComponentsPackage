<!-- AdvancedWinUiDataGrid/Controls/AdvancedDataGrid.xaml - ✅ OPRAVENÉ: Dynamické zobrazovanie dát -->
<UserControl x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.AdvancedDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">

        <Grid>
            <!-- ✅ Main Content Grid - zobrazuje sa po inicializácii -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ✅ Header Grid - zobrazenie stĺpcov -->
                <Border x:Name="HeaderGrid" 
                        Grid.Row="0"
                        Background="{ThemeResource LayerFillColorAltBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1"
                        MinHeight="40">

                    <!-- ✅ NOVÉ: Dynamické headery cez ItemsRepeater -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  ZoomMode="Disabled">
                        <ItemsRepeater x:Name="HeaderRepeater">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="0,0,1,0"
                                            Width="{Binding Width}"
                                            MinHeight="40"
                                            Padding="8,6">
                                        <TextBlock Text="{Binding Header}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Border>

                <!-- ✅ Data area - dynamické riadky cez ItemsRepeater -->
                <ScrollViewer x:Name="DataGridScrollViewer"
                              Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                    <!-- ✅ KĽÚČOVÁ ZMENA: ItemsRepeater namiesto statického textu -->
                    <ItemsRepeater x:Name="DataRowsRepeater" 
                                   ItemsSource="{x:Bind DisplayRows, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Vertical" Spacing="0"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="local:DataRowViewModel">
                                <!-- Single row -->
                                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1">

                                    <!-- Cells in row via horizontal ItemsRepeater -->
                                    <ItemsRepeater ItemsSource="{x:Bind Cells, Mode=OneWay}">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Orientation="Horizontal"/>
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="local:CellViewModel">
                                                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="0,0,1,0"
                                                        Width="{x:Bind Width}"
                                                        MinHeight="36"
                                                        Padding="8,6">

                                                    <!-- Cell content -->
                                                    <TextBox Text="{x:Bind DisplayValue, Mode=TwoWay}" 
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             Padding="0"
                                                             AcceptsReturn="True"
                                                             TextWrapping="Wrap"
                                                             VerticalAlignment="Stretch"
                                                             FontSize="14"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                </ScrollViewer>
            </Grid>

            <!-- ✅ Loading Overlay - zobrazuje sa počas inicializácie -->
            <Border x:Name="LoadingOverlay"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="32" 
                                 Height="32"/>

                    <TextBlock x:Name="LoadingText"
                              Text="🚀 Loading AdvancedDataGrid with LoggerComponent integration..."
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="300"/>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>