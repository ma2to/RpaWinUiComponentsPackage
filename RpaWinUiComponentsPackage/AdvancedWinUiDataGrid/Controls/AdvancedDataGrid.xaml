<!-- AdvancedWinUiDataGrid/Controls/AdvancedDataGrid.xaml - âœ… VÅ ETKY XAML CHYBY OPRAVENÃ‰ -->
<UserControl x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.AdvancedDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:RpaWinUiComponentsPackage.AdvancedWinUiDataGrid">

    <!-- âœ… OPRAVENÃ‰: Resources pre realtime validÃ¡ciu -->
    <UserControl.Resources>
        <!-- Converters pre validÃ¡ciu -->
        <local:BoolToValidationBrushConverter x:Key="BoolToValidationBrushConverter" />
        <local:BoolToValidationThicknessConverter x:Key="BoolToValidationThicknessConverter" />

        <!-- âœ… OPRAVENÃ‰: Style pre validaÄnÃ© TextBoxy bez neexistujÃºcich Transitions -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="14" />
            <!-- âœ… OPRAVENÃ‰: OdstrÃ¡nenÃ© neexistujÃºce BorderThicknessTransition a BrushTransition -->
        </Style>
    </UserControl.Resources>

    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">

        <Grid>
            <!-- âœ… Main Content Grid - zobrazuje sa po inicializÃ¡cii -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- âœ… Header Grid - zobrazenie stÄºpcov -->
                <Border x:Name="HeaderGrid" 
                        Grid.Row="0"
                        Background="{ThemeResource LayerFillColorAltBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1"
                        MinHeight="40">

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  ZoomMode="Disabled">
                        <ItemsRepeater x:Name="HeaderRepeater">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource LayerFillColorAltBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="0,0,1,0"
                                            Width="{Binding Width}"
                                            MinHeight="40"
                                            Padding="8,6">

                                        <!-- âœ… Header s tooltip pre validaÄnÃ© info -->
                                        <TextBlock Text="{Binding Header}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTipService.ToolTip="{Binding Header}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Border>

                <!-- âœ… Data area - dynamickÃ© riadky s REALTIME VALIDÃCIOU -->
                <ScrollViewer x:Name="DataGridScrollViewer"
                              Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                    <!-- âœ… OneWay binding pre ObservableCollection s realtime support -->
                    <ItemsRepeater x:Name="DataRowsRepeater" 
                                   ItemsSource="{x:Bind DisplayRows, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Vertical" Spacing="0"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="local:DataRowViewModel">
                                <!-- Single row -->
                                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1">

                                    <!-- âœ… OneWay binding pre realtime updates -->
                                    <ItemsRepeater ItemsSource="{x:Bind Cells, Mode=OneWay}">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Orientation="Horizontal"/>
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate x:DataType="local:CellViewModel">
                                                <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="0,0,1,0"
                                                        Width="{x:Bind Width}"
                                                        MinHeight="36"
                                                        Padding="2">

                                                    <!-- âœ… HLAVNÃ‰: TextBox s REALTIME VALIDÃCIOU a KEYBOARD HANDLING -->
                                                    <TextBox Text="{x:Bind DisplayValue, Mode=TwoWay}" 
                                                             Style="{StaticResource ValidatedTextBoxStyle}"
                                                             BorderBrush="{x:Bind IsValid, Converter={StaticResource BoolToValidationBrushConverter}}"
                                                             BorderThickness="{x:Bind IsValid, Converter={StaticResource BoolToValidationThicknessConverter}}"
                                                             Tag="{x:Bind}"
                                                             ToolTipService.ToolTip="{x:Bind ValidationErrors}"
                                                             Loaded="OnCellTextBoxLoaded"/>

                                                    <!-- âœ… OPRAVENÃ‰: ValidaÄnÃ½ indikÃ¡tor bez neexistujÃºceho OpacityTransition -->
                                                    <Border x:Name="ValidationIndicator"
                                                            Width="4"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Stretch"
                                                            Background="{ThemeResource SystemFillColorCriticalBrush}"
                                                            Visibility="{x:Bind HasValidationErrors, Mode=OneWay}"
                                                            Opacity="0.8">
                                                        <!-- âœ… OPRAVENÃ‰: OdstrÃ¡nenÃ© neexistujÃºce OpacityTransition -->
                                                    </Border>

                                                </Border>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                </ScrollViewer>
            </Grid>

            <!-- âœ… Loading Overlay - zobrazuje sa poÄas inicializÃ¡cie -->
            <Border x:Name="LoadingOverlay"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="32" 
                                 Height="32"/>

                    <TextBlock x:Name="LoadingText"
                              Text="ðŸš€ Loading AdvancedDataGrid with REALTIME VALIDATION..."
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="350"/>

                    <!-- âœ… ValidaÄnÃ© info v loading -->
                    <TextBlock Text="âš¡ Realtime validation â€¢ ESC to cancel â€¢ ENTER to confirm â€¢ TAB to navigate"
                              FontSize="12"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>

                </StackPanel>
            </Border>

            <!-- âœ… ValidaÄnÃ½ overlay (zobrazuje sa keÄ sÃº globÃ¡lne validaÄnÃ© chyby) -->
            <Border x:Name="ValidationOverlay"
                    Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                    BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Visibility="Collapsed"
                    Opacity="0.95">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="12"
                           Padding="20">

                    <FontIcon Glyph="&#xE783;" 
                             FontSize="32"
                             Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                    <TextBlock x:Name="ValidationErrorsText"
                              Text="Validation errors detected!"
                              FontSize="16"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"
                              Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                    <TextBlock Text="Fix the highlighted fields to continue"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <!-- TlaÄidlo na skrytie overlay -->
                    <Button x:Name="HideValidationOverlayButton"
                            Content="Continue editing"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Click="OnHideValidationOverlayClick"/>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>