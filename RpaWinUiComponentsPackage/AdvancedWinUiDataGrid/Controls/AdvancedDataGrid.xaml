<!-- AdvancedWinUiDataGrid/Controls/AdvancedDataGrid.xaml - âœ… KOMPLETNE OPRAVENÃ -->
<UserControl x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.AdvancedDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:RpaWinUiComponentsPackage.AdvancedWinUiDataGrid"
             x:Name="RootControl">

    <!-- âœ… OPRAVENÃ‰: Resources pre realtime validÃ¡ciu a converters -->
    <UserControl.Resources>
        <!-- Converters pre validÃ¡ciu -->
        <local:BoolToValidationBrushConverter x:Key="BoolToValidationBrushConverter" />
        <local:BoolToValidationThicknessConverter x:Key="BoolToValidationThicknessConverter" />
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:ZebraRowConverter x:Key="ZebraRowConverter" />

        <!-- âœ… OPRAVENÃ‰: Style pre validaÄnÃ© TextBoxy -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- âœ… NOVÃ‰: Style pre column resize grip -->
        <Style x:Key="ColumnResizeGripStyle" TargetType="Border">
            <Setter Property="Width" Value="4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <!-- âœ… NOVÃ‰: Style pre resizable header -->
        <Style x:Key="ResizableHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource LayerFillColorAltBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <!-- âœ… NOVÃ‰: Style pre ValidAlerts stretching -->
        <Style x:Key="ValidAlertsColumnStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="MinHeight" Value="36" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="MinWidth" Value="200" />
        </Style>
    </UserControl.Resources>

    <!-- âœ… OPRAVENÃ‰: Main border s responzÃ­vnym dizajnom -->
    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            x:Name="MainBorder">

        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- âœ… OPRAVENÃ‰: Main Content Grid - zobrazuje sa po inicializÃ¡cii -->
            <Grid x:Name="MainContentGrid" 
                  Grid.Row="0"
                  Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- âœ… NOVÃ‰: Header area s resize funkcionalitou -->
                <Border x:Name="HeaderArea" 
                        Grid.Row="0"
                        Background="{ThemeResource LayerFillColorAltBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1"
                        MinHeight="40">

                    <!-- âœ… KÄ½ÃšÄŒOVÃ‰: HorizontÃ¡lny scroll pre headers -->
                    <ScrollViewer x:Name="HeaderScrollViewer"
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  ZoomMode="Disabled"
                                  HorizontalScrollMode="Auto"
                                  VerticalScrollMode="Disabled"
                                  ViewChanged="OnHeaderScrollViewChanged">

                        <!-- âœ… NOVÃ‰: Flexible header container -->
                        <Grid x:Name="HeaderContainer"
                              HorizontalAlignment="Stretch"
                              MinHeight="40">

                            <Grid.ColumnDefinitions>
                                <!-- DynamickÃ© stÄºpce sa pridajÃº v code-behind -->
                            </Grid.ColumnDefinitions>

                            <!-- Headers sa budÃº pridÃ¡vaÅ¥ dynamicky v code-behind -->
                            <StackPanel x:Name="HeaderStackPanel" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Background="Transparent"
                                        Height="40" />

                        </Grid>
                    </ScrollViewer>
                </Border>

                <!-- âœ… KÄ½ÃšÄŒOVÃ‰: Data area s komplexnÃ½m scroll support -->
                <Border Grid.Row="1" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0">

                    <ScrollViewer x:Name="DataGridScrollViewer"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto"
                                  ZoomMode="Disabled"
                                  HorizontalScrollMode="Auto"
                                  VerticalScrollMode="Auto"
                                  ViewChanged="OnDataScrollViewChanged">

                        <!-- âœ… NOVÃ‰: Main data container s responsive layout -->
                        <Grid x:Name="DataContainer"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top">

                            <Grid.ColumnDefinitions>
                                <!-- DynamickÃ© stÄºpce sa pridajÃº v code-behind -->
                            </Grid.ColumnDefinitions>

                            <!-- âœ… NOVÃ‰: Data rows container -->
                            <ItemsControl x:Name="DataRowsContainer"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Top"
                                          Grid.ColumnSpan="999">

                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" 
                                                    HorizontalAlignment="Stretch"
                                                    Background="Transparent" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Data row template sa pridÃ¡ v code-behind -->
                                        <Border Background="Transparent"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="0,0,0,1"
                                                MinHeight="36"
                                                HorizontalAlignment="Stretch">

                                            <!-- Row content container -->
                                            <Grid x:Name="RowContentGrid"
                                                  HorizontalAlignment="Stretch" />

                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </Grid>

                    </ScrollViewer>

                </Border>

            </Grid>

            <!-- âœ… OPRAVENÃ‰: Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Grid.Row="0"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="32" 
                                 Height="32"/>

                    <TextBlock x:Name="LoadingText"
                              Text="ðŸš€ Loading AdvancedDataGrid..."
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="350"/>

                    <!-- âœ… Info text -->
                    <TextBlock Text="âš¡ Features: Realtime validation â€¢ Resize columns â€¢ Scroll support â€¢ ValidAlerts stretching"
                              FontSize="12"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="450"/>

                </StackPanel>
            </Border>

            <!-- âœ… NOVÃ‰: Selection Rectangle Overlay -->
            <Border x:Name="SelectionRectangleOverlay"
                    Grid.Row="0"
                    Background="Transparent"
                    Visibility="Collapsed"
                    IsHitTestVisible="False">
                
                <Border x:Name="SelectionRectangle"
                        Background="{ThemeResource SystemAccentColorLight2}"
                        BorderBrush="{ThemeResource SystemAccentColor}"
                        BorderThickness="2"
                        Opacity="0.3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="0"
                        Height="0"
                        Margin="0">
                    
                    <!-- Dashed border effect -->
                    <Border.BorderBrush>
                        <SolidColorBrush Color="{ThemeResource SystemAccentColor}" />
                    </Border.BorderBrush>
                </Border>
            </Border>

            <!-- âœ… OPRAVENÃ‰: ValidaÄnÃ½ overlay -->
            <Border x:Name="ValidationOverlay"
                    Grid.Row="0"
                    Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                    BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Visibility="Collapsed"
                    Opacity="0.95">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="12"
                           Padding="20">

                    <FontIcon Glyph="&#xE783;" 
                             FontSize="32"
                             Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                    <TextBlock x:Name="ValidationErrorsText"
                              Text="Validation errors detected!"
                              FontSize="16"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"
                              Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                    <TextBlock Text="Fix the highlighted fields to continue"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <!-- TlaÄidlo na skrytie overlay -->
                    <Button x:Name="HideValidationOverlayButton"
                            Content="Continue editing"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Click="OnHideValidationOverlayClick"/>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>