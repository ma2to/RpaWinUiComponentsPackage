<!-- AdvancedWinUiDataGrid/Controls/AdvancedDataGrid.xaml - ✅ VŠETKY CHYBY OPRAVENÉ + RESIZE + SCROLL -->
<UserControl x:Class="RpaWinUiComponentsPackage.AdvancedWinUiDataGrid.AdvancedDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:RpaWinUiComponentsPackage.AdvancedWinUiDataGrid">

    <!-- ✅ OPRAVENÉ: Resources pre realtime validáciu -->
    <UserControl.Resources>
        <!-- Converters pre validáciu -->
        <local:BoolToValidationBrushConverter x:Key="BoolToValidationBrushConverter" />
        <local:BoolToValidationThicknessConverter x:Key="BoolToValidationThicknessConverter" />

        <!-- ✅ OPRAVENÉ: Style pre validačné TextBoxy -->
        <Style x:Key="ValidatedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="AcceptsReturn" Value="True" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- ✅ NOVÉ: Style pre column resize grip -->
        <Style x:Key="ColumnResizeGripStyle" TargetType="Border">
            <Setter Property="Width" Value="4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="SizeWE" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <!-- ✅ NOVÉ: Style pre header s resize možnosťou -->
        <Style x:Key="ResizableHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource LayerFillColorAltBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="MinHeight" Value="40" />
        </Style>
    </UserControl.Resources>

    <!-- ✅ OPRAVENÉ: Main border -->
    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8">

        <Grid>
            <!-- ✅ OPRAVENÉ: Main Content Grid - zobrazuje sa po inicializácii -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ✅ NOVÉ: Header Grid s resize funkcionalitou -->
                <Border x:Name="HeaderGrid" 
                        Grid.Row="0"
                        Background="{ThemeResource LayerFillColorAltBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1"
                        MinHeight="40">

                    <!-- ✅ NOVÉ: ScrollViewer pre horizontálny scroll headerov -->
                    <ScrollViewer x:Name="HeaderScrollViewer"
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Disabled"
                                  ZoomMode="Disabled"
                                  HorizontalScrollMode="Auto">

                        <!-- ✅ NOVÉ: StackPanel s resizable headers -->
                        <StackPanel x:Name="HeaderStackPanel" 
                                    Orientation="Horizontal"
                                    Background="Transparent">
                            <!-- Headers sa budú pridávať dynamicky v code-behind -->
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- ✅ NOVÉ: Data area s kompletným scroll support -->
                <ScrollViewer x:Name="DataGridScrollViewer"
                              Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              ZoomMode="Disabled"
                              HorizontalScrollMode="Auto"
                              VerticalScrollMode="Auto">

                    <!-- ✅ NOVÉ: Main data container -->
                    <StackPanel x:Name="DataRowsContainer" 
                                Orientation="Vertical" 
                                Background="Transparent">
                        <!-- Data rows sa budú pridávať dynamicky -->
                    </StackPanel>

                </ScrollViewer>
            </Grid>

            <!-- ✅ OPRAVENÉ: Loading Overlay -->
            <Border x:Name="LoadingOverlay"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="32" 
                                 Height="32"/>

                    <TextBlock x:Name="LoadingText"
                              Text="🚀 Loading AdvancedDataGrid with REALTIME VALIDATION..."
                              FontSize="14"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="350"/>

                    <!-- ✅ Validačné info v loading -->
                    <TextBlock Text="⚡ Realtime validation • ESC to cancel • ENTER to confirm • TAB to navigate • Mouse resize columns"
                              FontSize="12"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>

                </StackPanel>
            </Border>

            <!-- ✅ OPRAVENÉ: Validačný overlay -->
            <Border x:Name="ValidationOverlay"
                    Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                    BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Visibility="Collapsed"
                    Opacity="0.95">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="12"
                           Padding="20">

                    <FontIcon Glyph="&#xE783;" 
                             FontSize="32"
                             Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                    <TextBlock x:Name="ValidationErrorsText"
                              Text="Validation errors detected!"
                              FontSize="16"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"
                              Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                    <TextBlock Text="Fix the highlighted fields to continue"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <!-- Tlačidlo na skrytie overlay -->
                    <Button x:Name="HideValidationOverlayButton"
                            Content="Continue editing"
                            HorizontalAlignment="Center"
                            Margin="0,8,0,0"
                            Click="OnHideValidationOverlayClick"/>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>