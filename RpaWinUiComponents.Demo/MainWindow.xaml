<!-- RpaWinUiComponents.Demo/MainWindow.xaml - ✅ OPRAVENÉ Individual Color Config UI -->
<Window x:Class="RpaWinUiComponents.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:RpaWinUiComponents.Demo"
        xmlns:grid="using:RpaWinUiComponents.AdvancedWinUiDataGrid"
        Title="RPA WinUI Components - Demo Aplikácia s Individual Color Config">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource AccentFillColorDefaultBrush}" 
                Padding="20,16">
            <StackPanel>
                <TextBlock Text="🚀 RPA WinUI Components - Advanced DataGrid Demo" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          Foreground="White"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                    <TextBlock Text="Status:" 
                              FontSize="14"
                              Foreground="White"/>
                    <TextBlock x:Name="InitStatusText" 
                              Text=" - Inicializuje sa..."
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="White"/>
                </StackPanel>
                <TextBlock Text="✨ NOVÉ: Individual Color Config + AUTO-ADD + Realtime Validácie" 
                          FontSize="12" 
                          FontWeight="Medium"
                          Foreground="White"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Spacing="12">

                    <!-- Základné operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📊 Základné Operácie" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="LoadSampleDataButton"
                                    Content="📥 Načítať Ukážkové Dáta"
                                    Click="OnLoadSampleDataClick"
                                    Width="200"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    Foreground="White"/>

                            <Button x:Name="ValidateAllButton"
                                    Content="✅ Validovať Všetko"
                                    Click="OnValidateAllClick"
                                    Width="200"/>

                            <Button x:Name="ExportDataButton"
                                    Content="📤 Exportovať Dáta"
                                    Click="OnExportDataClick"
                                    Width="200"/>

                            <Button x:Name="ClearDataButton"
                                    Content="🗑️ Vymazať Všetko"
                                    Click="OnClearDataClick"
                                    Width="200"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Individual Color Config Operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🎨 Individual Colors (NOVÉ)" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="ApplyLightThemeButton"
                                    Content="☀️ Light Colors"
                                    Click="OnApplyLightThemeClick"
                                    Width="180"
                                    ToolTipService.ToolTip="Reinicializuje s Light individual colors"/>

                            <Button x:Name="ApplyDarkThemeButton"
                                    Content="🌙 Dark Colors"
                                    Click="OnApplyDarkThemeClick"
                                    Width="180"
                                    Background="{ThemeResource SystemFillColorSolidNeutralBrush}"
                                    ToolTipService.ToolTip="Reinicializuje s Dark individual colors"/>

                            <Button x:Name="ApplyBlueThemeButton"
                                    Content="💙 Blue Colors"
                                    Click="OnApplyBlueThemeClick"
                                    Width="180"
                                    Background="{ThemeResource SystemFillColorSolidNeutralBrush}"
                                    ToolTipService.ToolTip="Reinicializuje s Blue individual colors"/>

                            <Button x:Name="ApplyCustomThemeButton"
                                    Content="✨ Custom Orange Colors"
                                    Click="OnApplyCustomThemeClick"
                                    Width="180"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    Foreground="White"
                                    ToolTipService.ToolTip="Reinicializuje s custom Orange individual colors"/>

                            <Button x:Name="ResetThemeButton"
                                    Content="🔄 Reset to Default"
                                    Click="OnResetThemeClick"
                                    Width="180"
                                    ToolTipService.ToolTip="Resetuje na default Light individual colors"/>
                        </StackPanel>
                    </Border>

                    <!-- Custom Validation Operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🎯 Custom Validácia" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="DeleteByCustomValidationButton"
                                    Content="🗑️ Zmaž: Plat>10k, Vek>50"
                                    Click="OnDeleteByCustomValidationClick"
                                    Width="220"
                                    Background="{ThemeResource SystemFillColorAttentionBrush}"
                                    ToolTipService.ToolTip="Zmaže riadky kde plat > 10000 ALEBO vek > 50 (s AUTO-ADD ochranou)"/>

                            <Button x:Name="AdvancedDeleteExamplesButton"
                                    Content="⚡ Pokročilé Delete Príklady"
                                    Click="OnAdvancedDeleteExamplesClick"
                                    Width="220"
                                    Background="{ThemeResource SystemFillColorCautionBrush}"
                                    ToolTipService.ToolTip="Zmaže riadky: prázdny email, párne ID (s AUTO-ADD ochranou)"/>
                        </StackPanel>
                    </Border>

                    <!-- AUTO-ADD Testing -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🔥 AUTO-ADD Testing" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="TestAutoAddFewRowsButton"
                                    Content="📊 Test: Málo Riadkov"
                                    Click="OnTestAutoAddFewRowsClick"
                                    Width="180"
                                    Background="{ThemeResource SystemFillColorSuccessBrush}"
                                    ToolTipService.ToolTip="Test načítania 3 riadkov (menej ako minimum 5)"/>

                            <Button x:Name="TestAutoAddManyRowsButton"
                                    Content="📈 Test: Množstvo Riadkov"
                                    Click="OnTestAutoAddManyRowsClick"
                                    Width="180"
                                    ToolTipService.ToolTip="Test načítania 20 riadkov (viac ako minimum 5)"/>

                            <Button x:Name="TestAutoAddDeleteButton"
                                    Content="🗑️ Test: Inteligentné Delete"
                                    Click="OnTestAutoAddDeleteClick"
                                    Width="180"
                                    Background="{ThemeResource SystemFillColorCautionBrush}"
                                    ToolTipService.ToolTip="Test mazania s ochranou minimálneho počtu riadkov"/>
                        </StackPanel>
                    </Border>

                    <!-- Realtime Testing -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="⚡ Realtime Testing" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="TestRealtimeValidationButton"
                                    Content="🔥 Test Realtime Validácie"
                                    Click="OnTestRealtimeValidationClick"
                                    Width="200"
                                    Background="{ThemeResource SystemFillColorSuccessBrush}"/>

                            <Button x:Name="TestNavigationButton"
                                    Content="🧭 Test Tab/Enter/Esc"
                                    Click="OnTestNavigationClick"
                                    Width="200"/>

                            <Button x:Name="TestCopyPasteButton"
                                    Content="📋 Test Copy/Paste"
                                    Click="OnTestCopyPasteClick"
                                    Width="200"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Panel -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="6">
                            <TextBlock Text="ℹ️ Návod" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Margin="0,0,0,4"/>

                            <TextBlock FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      Width="200">
                                <Run Text="1. Načítaj ukážkové dáta"/>
                                <LineBreak/>
                                <Run Text="2. Vyskúšaj individual colors"/>
                                <LineBreak/>
                                <Run Text="3. Test AUTO-ADD funkcionalitu"/>
                                <LineBreak/>
                                <Run Text="4. Test realtime validácie"/>
                                <LineBreak/>
                                <Run Text="5. Tab/Enter/Esc navigácia"/>
                                <LineBreak/>
                                <Run Text="6. Ctrl+C/V kopírovanie"/>
                                <LineBreak/>
                                <Run Text="7. Custom delete operácie"/>
                            </TextBlock>

                            <TextBlock Text="💡 TIP: Individual colors sa nastavujú pri inicializácii! AUTO-ADD je vždy aktívne!"
                                      FontSize="11"
                                      FontWeight="Medium"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      TextWrapping="Wrap"
                                      Width="200"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">

            <!-- Loading Panel -->
            <Border x:Name="LoadingPanel"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="48" 
                                 Height="48"/>

                    <TextBlock x:Name="LoadingDetailText"
                              Text="Inicializuje sa Advanced DataGrid komponent s Individual Color Config..."
                              FontSize="16"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>

                    <TextBlock Text="Prosím počkajte, komponent sa pripravuje s AUTO-ADD a Individual Colors..."
                              FontSize="14"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>

                </StackPanel>
            </Border>

            <!-- DataGrid Component -->
            <grid:AdvancedDataGrid x:Name="DataGridControl"
                                  Visibility="Collapsed"
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1"
                                  CornerRadius="8"/>

        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,12">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusTextBlock"
                          Grid.Column="0"
                          Text="Pripravuje sa DataGrid komponent s Individual Color Config a AUTO-ADD..."
                          FontSize="14"
                          VerticalAlignment="Center"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="16">

                    <TextBlock Text="🎨 Individual Color Config + 🔥 AUTO-ADD + ⚡ Realtime Validations DEMO"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                              VerticalAlignment="Center"/>

                    <TextBlock Text="v1.1.0"
                              FontSize="12"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>