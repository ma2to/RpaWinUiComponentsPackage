<!-- RpaWinUiComponents.Demo/MainWindow.xaml -->
<Window x:Class="RpaWinUiComponents.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:RpaWinUiComponents.Demo"
        xmlns:grid="using:RpaWinUiComponents.AdvancedWinUiDataGrid"
        Title="RPA WinUI Components - Demo Aplikácia"
        Width="1400"
        Height="900">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource AccentAAFillColorDefaultBrush}" 
                Padding="20,16">
            <StackPanel>
                <TextBlock Text="🚀 RPA WinUI Components - Advanced DataGrid Demo" 
                          FontSize="24" 
                          FontWeight="SemiBold"
                          Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                    <TextBlock Text="Status:" 
                              FontSize="14"
                              Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="InitStatusText" 
                              Text=" - Inicializuje sa..."
                              FontSize="14"
                              FontWeight="Medium"
                              Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">

            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" Spacing="12">

                    <!-- Základné operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="📊 Základné Operácie" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="LoadSampleDataButton"
                                    Content="📥 Načítať Ukážkové Dáta"
                                    Click="OnLoadSampleDataClick"
                                    Width="200"
                                    Style="{ThemeResource AccentButtonStyle}"/>

                            <Button x:Name="ValidateAllButton"
                                    Content="✅ Validovať Všetko"
                                    Click="OnValidateAllClick"
                                    Width="200"/>

                            <Button x:Name="ExportDataButton"
                                    Content="📤 Exportovať Dáta"
                                    Click="OnExportDataClick"
                                    Width="200"/>

                            <Button x:Name="ClearDataButton"
                                    Content="🗑️ Vymazať Všetko"
                                    Click="OnClearDataClick"
                                    Width="200"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- NOVÉ: Custom Validation Operácie -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🎯 Custom Validácia (NOVÉ)" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                      Margin="0,0,0,4"/>

                            <Button x:Name="DeleteByCustomValidationButton"
                                    Content="🗑️ Zmaž: Plat>10k, Vek>50"
                                    Click="OnDeleteByCustomValidationClick"
                                    Width="220"
                                    Background="{ThemeResource SystemFillColorAttentionBrush}"
                                    ToolTipService.ToolTip="Zmaže riadky kde plat > 10000 ALEBO vek > 50"/>

                            <Button x:Name="AdvancedDeleteExamplesButton"
                                    Content="⚡ Pokročilé Delete Príklady"
                                    Click="OnAdvancedDeleteExamplesClick"
                                    Width="220"
                                    Background="{ThemeResource SystemFillColorCautionBrush}"
                                    ToolTipService.ToolTip="Zmaže riadky: prázdny email, nevalidný email, párne ID"/>
                        </StackPanel>
                    </Border>

                    <!-- Info Panel -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16,12">
                        <StackPanel Spacing="6">
                            <TextBlock Text="ℹ️ Návod" 
                                      FontWeight="SemiBold" 
                                      FontSize="14"
                                      Margin="0,0,0,4"/>

                            <TextBlock FontSize="12" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      Width="200">
                                <Run Text="1. Načítaj ukážkové dáta"/>
                                <LineBreak/>
                                <Run Text="2. Skús custom delete operácie"/>
                                <LineBreak/>
                                <Run Text="3. Tab/Enter navigácia"/>
                                <LineBreak/>
                                <Run Text="4. Ctrl+C/V kopírovanie"/>
                                <LineBreak/>
                                <Run Text="5. Realtime validácie"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">

            <!-- Loading Panel -->
            <Border x:Name="LoadingPanel"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Visibility="Visible">

                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Spacing="16">

                    <ProgressRing IsActive="True" 
                                 Width="48" 
                                 Height="48"/>

                    <TextBlock x:Name="LoadingDetailText"
                              Text="Inicializuje sa Advanced DataGrid komponent..."
                              FontSize="16"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"/>

                    <TextBlock Text="Prosím počkajte, komponent sa pripravuje..."
                              FontSize="14"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"/>

                </StackPanel>
            </Border>

            <!-- DataGrid Component -->
            <grid:AdvancedDataGrid x:Name="DataGridControl"
                                  Visibility="Collapsed"
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1"
                                  CornerRadius="8"/>

        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{ThemeResource LayerFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,12">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusTextBlock"
                          Grid.Column="0"
                          Text="Pripravuje sa DataGrid komponent..."
                          FontSize="14"
                          VerticalAlignment="Center"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="16">

                    <TextBlock Text="🎯 Custom Delete API DEMO"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                              VerticalAlignment="Center"/>

                    <TextBlock Text="v1.0.0"
                              FontSize="12"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>