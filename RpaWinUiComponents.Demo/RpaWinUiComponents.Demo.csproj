<!-- RpaWinUiComponents.Demo/RpaWinUiComponents.Demo.csproj - ‚úÖ OPRAVEN√ù NETSDK1004 -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- ‚úÖ WinUI3 Target Framework -->
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- ‚úÖ OPRAVA NETSDK1004: Force restore before build -->
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <RestorePackagesWithLockFile>false</RestorePackagesWithLockFile>

    <!-- ‚úÖ XAML nastavenia -->
    <EnableDefaultPageItems>true</EnableDefaultPageItems>
    <EnableDefaultXamlItems>true</EnableDefaultXamlItems>
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>

    <!-- ‚úÖ Assembly Info -->
    <AssemblyTitle>RPA WinUI Components Demo</AssemblyTitle>
    <AssemblyDescription>Demo aplik√°cia pre testovanie AdvancedWinUiDataGrid bal√≠ka</AssemblyDescription>
    <AssemblyVersion>1.0.0</AssemblyVersion>

    <!-- ‚úÖ Platforms -->
    <Platforms>x86;x64;ARM64</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>

    <!-- ‚úÖ Suppress warnings -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416;NETSDK1022;CS0414</NoWarn>

    <!-- ‚úÖ CONDITIONAL: Ak package existuje, definuj HAS_PACKAGE -->
    <DefineConstants Condition="Exists('$(NuGetPackageRoot)rpawinuicomponents.advancedwinuidatagrid\1.0.18\')">$(DefineConstants);HAS_PACKAGE</DefineConstants>
  </PropertyGroup>

  <!-- ‚úÖ WinUI3 Dependencies - V≈ΩDY POTREBN√â -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
    <PackageReference Include="RpaWinUiComponents.AdvancedWinUiDataGrid" Version="1.0.18" />
  </ItemGroup>

  <!-- ‚úÖ CONDITIONAL: Package reference iba ak lok√°lne existuje package alebo je force enabled -->

  <!-- ‚úÖ FALLBACK: Pre testovanie bez package -->
  <PropertyGroup Condition="'$(ForcePackageReference)' != 'true'">
    <PackageAvailable>false</PackageAvailable>
  </PropertyGroup>

  <!-- ‚úÖ Assets - iba ak existuj√∫ -->
  <ItemGroup Condition="Exists('Assets')">
    <Content Include="Assets\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- ‚úÖ Manifest - iba ak existuje -->
  <ItemGroup Condition="Exists('Package.appxmanifest')">
    <None Include="Package.appxmanifest">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

  <!-- ‚úÖ Pre testovanie v development - ak package neexistuje, vytvor fake implement√°ciu -->
  <Target Name="CheckPackageAvailability" BeforeTargets="Build">
    <PropertyGroup>
      <LocalPackageExists Condition="Exists('$(MSBuildProjectDirectory)\..\AdvancedWinUiDataGrid\bin\Debug\RpaWinUiComponents.AdvancedWinUiDataGrid.1.0.18.nupkg')">true</LocalPackageExists>
    </PropertyGroup>
    
    <Message Text="üì¶ Checking package availability..." Importance="normal" />
    <Message Text="‚úÖ Local package found" Importance="normal" Condition="'$(LocalPackageExists)' == 'true'" />
    <Message Text="‚ö†Ô∏è Local package not found - demo will run in limited mode" Importance="normal" Condition="'$(LocalPackageExists)' != 'true'" />
  </Target>

  <!-- ‚úÖ Force restore target pre NETSDK1004 -->
  <Target Name="EnsureNuGetRestore" BeforeTargets="PrepareForBuild">
    <PropertyGroup>
      <AssetsFileExists Condition="Exists('$(MSBuildProjectDirectory)\obj\project.assets.json')">true</AssetsFileExists>
    </PropertyGroup>
    
    <Message Text="üîç Checking assets file..." Importance="normal" />
    
    <Exec Command="dotnet restore &quot;$(MSBuildProjectFile)&quot; --verbosity quiet" Condition="'$(AssetsFileExists)' != 'true'" ContinueOnError="true" />
    
    <Message Text="‚úÖ NuGet restore completed" Importance="normal" Condition="'$(AssetsFileExists)' != 'true'" />
  </Target>

  <!-- ‚úÖ Clean target -->
  <Target Name="CleanDemoProject" BeforeTargets="Clean">
    <Message Text="üßπ Cleaning Demo project files..." Importance="normal" />
    <RemoveDir Directories="bin;obj" ContinueOnError="true" />
  </Target>

  <!-- ‚úÖ Pre development - show build info -->
  <Target Name="ShowBuildInfo" BeforeTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <Message Text="üöÄ Building Demo with package availability check..." Importance="normal" />
    <Message Text="üì¶ Target: $(TargetFramework)" Importance="normal" />
    <Message Text="üéØ Platform: $(Platform)" Importance="normal" />
  </Target>

</Project>