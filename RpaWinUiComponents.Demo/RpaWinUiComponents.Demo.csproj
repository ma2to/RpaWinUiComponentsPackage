<!-- RpaWinUiComponents.Demo/RpaWinUiComponents.Demo.csproj - ‚úÖ OPRAVEN√ù NETSDK1004 -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- ‚úÖ WinUI3 Target Framework -->
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- ‚úÖ XAML nastavenia -->
    <EnableDefaultPageItems>true</EnableDefaultPageItems>
    <EnableDefaultXamlItems>true</EnableDefaultXamlItems>
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>

    <!-- ‚úÖ Assembly Info -->
    <AssemblyTitle>RPA WinUI Components Demo</AssemblyTitle>
    <AssemblyDescription>Demo aplik√°cia pre testovanie AdvancedWinUiDataGrid bal√≠ka</AssemblyDescription>
    <AssemblyVersion>1.0.0</AssemblyVersion>

    <!-- ‚úÖ Platforms -->
    <Platforms>x86;x64;ARM64</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>

    <!-- ‚úÖ KƒΩ√öƒåOV√Å OPRAVA NETSDK1004: Disable restore errors for missing packages -->
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    <RestoreForceEvaluate>false</RestoreForceEvaluate>
    <RestorePackagesWithLockFile>false</RestorePackagesWithLockFile>
    <TreatMissingProjectReferenceAsWarning>true</TreatMissingProjectReferenceAsWarning>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>

    <!-- ‚úÖ Suppress warnings -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416;NETSDK1022;CS0414;NETSDK1152;NETSDK1004;NU1102;NU1107</NoWarn>
  </PropertyGroup>

  <!-- ‚úÖ OPRAVEN√â: Conditional check pre package availability -->
  <PropertyGroup>
    <!-- ‚úÖ Skontroluj ƒçi local package existuje -->
    <LocalPackageDir>$(MSBuildThisFileDirectory)..\AdvancedWinUiDataGrid\bin\Debug\</LocalPackageDir>
    <LocalPackageExists Condition="Exists('$(LocalPackageDir)')">true</LocalPackageExists>
    
    <!-- ‚úÖ Skontroluj NuGet cache -->
    <NuGetPackageExists Condition="Exists('$(NuGetPackageRoot)rpawinuicomponents.advancedwinuidatagrid\1.0.18\')">true</NuGetPackageExists>
    
    <!-- ‚úÖ Nastav package availability flag -->
    <PackageAvailable Condition="'$(LocalPackageExists)' == 'true' OR '$(NuGetPackageExists)' == 'true'">true</PackageAvailable>
    
    <!-- ‚úÖ Define NO_PACKAGE if package is not available -->
    <DefineConstants Condition="'$(PackageAvailable)' != 'true'">$(DefineConstants);NO_PACKAGE</DefineConstants>
  </PropertyGroup>

  <!-- ‚úÖ WinUI3 Dependencies - V≈ΩDY POTREBN√â -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
    <PackageReference Include="RpaWinUiComponents.AdvancedWinUiDataGrid" Version="1.0.19" />
  </ItemGroup>

  <!-- ‚úÖ OPRAVEN√â: Conditional Package Reference - iba ak je dostupn√Ω -->

  <!-- ‚úÖ FALLBACK: Project Reference ak local build existuje ale package nie -->
  <ItemGroup Condition="'$(LocalPackageExists)' == 'true' AND '$(NuGetPackageExists)' != 'true'">
    <ProjectReference Include="..\AdvancedWinUiDataGrid\AdvancedWinUiDataGrid.csproj" />
  </ItemGroup>

  <!-- ‚úÖ Assets - iba ak existuj√∫ -->
  <ItemGroup Condition="Exists('Assets')">
    <Content Include="Assets\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- ‚úÖ Manifest - iba ak existuje -->
  <ItemGroup Condition="Exists('Package.appxmanifest')">
    <None Include="Package.appxmanifest">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

  <!-- ‚úÖ NETSDK1004 FIX: Ensure assets file directory exists -->
  <Target Name="EnsureAssetsFileDirectory" BeforeTargets="CollectPackageReferences;RestorePackages">
    <PropertyGroup>
      <ProjectAssetsFile>$(MSBuildProjectDirectory)\obj\project.assets.json</ProjectAssetsFile>
      <ProjectAssetsDir>$(MSBuildProjectDirectory)\obj\</ProjectAssetsDir>
    </PropertyGroup>
    
    <!-- ‚úÖ Create obj directory if it doesn't exist -->
    <MakeDir Directories="$(ProjectAssetsDir)" Condition="!Exists('$(ProjectAssetsDir)')" />
    
    <!-- ‚úÖ Create minimal assets file if missing and no packages to restore -->
    <WriteLinesToFile File="$(ProjectAssetsFile)" Lines="{&quot;version&quot;:3,&quot;targets&quot;:{&quot;$(TargetFramework)&quot;:{}},&quot;libraries&quot;:{},&quot;projectFileDependencyGroups&quot;:{&quot;$(TargetFramework)&quot;:[]},&quot;packageFolders&quot;:{},&quot;project&quot;:{&quot;version&quot;:&quot;1.0.0&quot;,&quot;frameworks&quot;:{&quot;$(TargetFramework)&quot;:{&quot;targetAlias&quot;:&quot;$(TargetFramework)&quot;,&quot;dependencies&quot;:{}}}}}" Overwrite="false" Condition="'$(PackageAvailable)' != 'true' AND !Exists('$(ProjectAssetsFile)')" />

    <Message Text="üì¶ Assets file directory ensured: $(ProjectAssetsDir)" Importance="low" />
  </Target>

  <!-- ‚úÖ Debug inform√°cie -->
  <Target Name="CheckPackageAvailability" BeforeTargets="Build">
    <Message Text="üì¶ Checking AdvancedWinUiDataGrid package availability..." Importance="normal" />
    <Message Text="üì¶ Local package: $(LocalPackageExists)" Importance="normal" />
    <Message Text="üì¶ NuGet package: $(NuGetPackageExists)" Importance="normal" />
    <Message Text="üì¶ Package available: $(PackageAvailable)" Importance="normal" />
    <Message Text="üì¶ DefineConstants: $(DefineConstants)" Importance="normal" />
    
    <Message Text="‚úÖ Package is available - full functionality enabled" Importance="high" Condition="'$(PackageAvailable)' == 'true'" />
    <Message Text="‚ö†Ô∏è Package not found - demo will run in limited mode (NO_PACKAGE defined)" Importance="high" Condition="'$(PackageAvailable)' != 'true'" />
  </Target>

  <!-- ‚úÖ NETSDK1004 prevention target -->
  <Target Name="PreventNETSDK1004" BeforeTargets="ResolvePackageAssets" Condition="'$(PackageAvailable)' != 'true'">
    <Message Text="üö´ Skipping package restore - no packages to restore" Importance="normal" />
    <PropertyGroup>
      <SkipPackageRestore>true</SkipPackageRestore>
    </PropertyGroup>
  </Target>

  <!-- ‚úÖ Pre development build info -->
  <Target Name="ShowBuildInfo" BeforeTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <Message Text="üöÄ Building Demo with conditional package support..." Importance="normal" />
    <Message Text="üì¶ Target: $(TargetFramework)" Importance="normal" />
    <Message Text="üéØ Platform: $(Platform)" Importance="normal" />
    <Message Text="üîß Build Mode: $(Configuration)" Importance="normal" />
    <Message Text="‚úÖ NETSDK1004 prevention active" Importance="normal" />
  </Target>

  <!-- ‚úÖ Clean target -->
  <Target Name="CleanDemoProject" BeforeTargets="Clean">
    <Message Text="üßπ Cleaning Demo project..." Importance="normal" />
    <RemoveDir Directories="bin;obj" ContinueOnError="true" />
  </Target>

</Project>