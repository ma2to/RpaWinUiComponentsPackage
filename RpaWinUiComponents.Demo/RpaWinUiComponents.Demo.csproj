<!-- RpaWinUiComponents.Demo/RpaWinUiComponents.Demo.csproj - ‚úÖ KOMPLETNE OPRAVEN√ù -->
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- ‚úÖ WinUI3 Target Framework -->
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- ‚úÖ KƒΩ√öƒåOV√Å OPRAVA NETSDK1022: Povoli≈• default items ale kontrolovane -->
    <EnableDefaultCompileItems>true</EnableDefaultCompileItems>
    <EnableDefaultEmbeddedResourceItems>true</EnableDefaultEmbeddedResourceItems>

    <!-- ‚úÖ XAML nastavenia - povoli≈• default XAML items -->
    <EnableDefaultPageItems>true</EnableDefaultPageItems>
    <EnableDefaultXamlItems>true</EnableDefaultXamlItems>
    <XamlCompilationEnabled>true</XamlCompilationEnabled>
    <UseCompiledXaml>true</UseCompiledXaml>

    <!-- ‚úÖ Assembly Info -->
    <AssemblyTitle>RPA WinUI Components Demo</AssemblyTitle>
    <AssemblyDescription>Demo aplik√°cia pre testovanie AdvancedWinUiDataGrid bal√≠ka</AssemblyDescription>
    <AssemblyVersion>1.0.0</AssemblyVersion>

    <!-- ‚úÖ Platforms -->
    <Platforms>x86;x64;ARM64</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>

    <!-- ‚úÖ Windows App SDK nastavenia -->
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <NoWarn>$(NoWarn);CA1416;NETSDK1022</NoWarn>
  </PropertyGroup>

  <!-- ‚úÖ WinUI3 Dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.7.250606001" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />
    <PackageReference Include="RpaWinUiComponents.AdvancedWinUiDataGrid" Version="1.0.18" />
    <!-- ‚úÖ KƒΩ√öƒåOV√â: Package Reference na n√°≈° bal√≠k -->
  </ItemGroup>

  <!-- ‚úÖ ODSTR√ÅNEN√â: Explicitn√© XAML a Compile defin√≠cie (spoliehame sa na default items) -->
  <!-- Toto eliminuje NETSDK1022 chybu -->

  <!-- ‚úÖ Assets - iba ak existuj√∫ -->
  <ItemGroup Condition="Exists('Assets')">
    <Content Include="Assets\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- ‚úÖ Manifest - iba ak existuje -->
  <ItemGroup Condition="Exists('Package.appxmanifest')">
    <None Include="Package.appxmanifest">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

  <!-- ‚úÖ Clean target pre development -->
  <Target Name="CleanDemoProject" BeforeTargets="Clean">
    <Message Text="üßπ Cleaning Demo project files..." Importance="normal" />
    <RemoveDir Directories="bin;obj" />
  </Target>

  <!-- ‚úÖ Package verification target -->
  <Target Name="VerifyPackageReference" BeforeTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <Message Text="üì¶ Verifying AdvancedWinUiDataGrid package reference..." Importance="normal" />
  </Target>

</Project>